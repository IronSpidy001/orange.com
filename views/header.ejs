<body>

    <nav id="navbar" class="navbar navbar-expand-lg navbar-dark fixed-top">
        <a class="navbar-brand" href="/home"><img src="/images/appleLogo.png" height="30px" width="50px"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto ml-auto text-center">
            <% for (var i = 0; i <=navBarList.length - 1;  i++ ) { %>
                <li class="nav-item active navbar-link">
                    <a class="nav-link" href="<%= navBarList[i].url %>"><%- navBarList[i].name %> <span class="sr-only">(current)</span></a>
                </li>
            <% } %>
        </div>
      </nav>

<script>
  jQuery(document).ready(function($) {
  var alterClass = function() {
    var ww = document.body.clientWidth;
    if (ww < 480) {
      $('#navbar').removeClass('navbar-custom');
      $('#navbar').addClass('bg-dark');
    } else if (ww >= 481) {
      $('#navbar').addClass('navbar-custom');
      $('#navbar').removeClass('bg-dark');
    };
  };
  $(window).resize(function(){
    alterClass();
  });
  //Fire it when the page first loads:
  alterClass();
});
</script>